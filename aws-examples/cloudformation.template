    "BucketName": {
      "Description": "cloudtrail",
      "Type": "String"
    },
    "TopicName": {
      "Description": "Name of the SNS topic.",
      "Type": "String",
      "Default": ""
    },
    "IncludeGlobalServiceEvents": {
      "Description": "Indicates whether the trail is publishing events from global services, such as IAM, to the log files.",
      "Type": "String",
      "Default": "false",
      "AllowedValues": [
        "true",
        "false"
      ]
    }
  },
  "Conditions": {
    "UseSNSTopic": {
      "Fn::Not": [
        {
          "Fn::Equals": [
            {
              "Ref": "TopicName"
            },
            ""
          ]
        }
      ]
    }
  },
