          "Ref": "BucketName"
        },
        "SnsTopicName": {
          "Fn::If": [
            "UseSNSTopic",
            {
              "Ref": "TopicName"
            },
            {
              "Ref": "AWS::NoValue"
            }
          ]
        },
        "IsLogging": true
